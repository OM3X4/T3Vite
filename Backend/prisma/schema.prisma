generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  name        String?
  apiKeyHash  String?
  imageUrl    String?
  inchatname  String?
  job         String?
  moreinfo    String?
  chats       Chat[]
  createdAt   DateTime @default(now())
}

model Chat {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  messages  Message[]
  title     String?
  createdAt DateTime @default(now())
}

model Message {
  id        String   @id @default(uuid())
  chat      Chat     @relation(fields: [chatId], references: [id])
  chatId    String
  role      String   // 'user' or 'assistant'
  content   String
  createdAt DateTime @default(now())
}
